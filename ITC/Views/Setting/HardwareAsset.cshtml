<script>
    $('.select,.select1,.select2').selectpicker();

    $('#startPurchaseDate').datetimepicker({
        format: 'DD-MMM-YYYY'
    });

    $('#stopPurchaseDate').datetimepicker({
        format: 'DD-MMM-YYYY'
    });

    $('#startServiceDate').datetimepicker({
        format: 'DD-MMM-YYYY'
    });

    $('#stopServiceDate').datetimepicker({
        format: 'DD-MMM-YYYY'
    });
    $('#startWarrantyDate').datetimepicker({
        format: 'DD-MMM-YYYY'
    });

    $('#stopWarrantyDate').datetimepicker({
        format: 'DD-MMM-YYYY'
    });

    $('#btnCreateHardwareAsset').on('click', (e) => {
        e.stopImmediatePropagation();
        $('.PartialSubSetting').empty().load('./CreateHardwareAsset');
    });

    var dataTable;
    $(document).ready(() => {
        loadDataTable();
    });

    function loadDataTable() {
        dataTable = $('#dtHardwareAsset').DataTable({
            destroy: true,
            responsive: true,
            bInfo: true,
            ordering: false,
            bLengthChange: false,
            paging: false,
            scrollY: 500,
            searching: false,
            ajax: {
                url: "./GetHardwareAsset",
                type: "GET",
                datatype: "json",
            },
            columns: [
                { data: "Equipment" },
                { data: "Description" },
                { data: "Owner" },
                { data: "Responsible" },
                {
                    data: "Status",
                    render: function (data, type, row) {
                        if (data == '1') {
                            return `<button class="btn btn-success btn-sm font-weight-bold">
                            Service
                        </button>`;
                        }
                        if (data == '2') {
                            return `<button class="btn btn-danger btn-sm font-weight-bold">
                            Inservice
                        </button>`;
                        }
                    }
                },
                {
                    data: "Id",
                    render: function (data, type, row) {

                        return ` <button type="button" class="btn btn-info" id="btninfo" style="margin-right: 20px" data-toggle="modal" data-target="#infoModal" value="Info"
                                            onclick=InfoHardwareAsset("./InfoHardwareAsset?Id=${data}")><i class="fas fa-book-medical"></i>
                                     </button>
                                     <button type="button" class="btn btn-warning" id="btnupdate" style="margin-right: 20px" data-toggle="modal" data-target="#updateModal" value="Update"
                                            onclick=ModifyHardwareAsset("./ModifyHardwareAsset?Id=${data}")><i class="far fa-edit"></i>
                                     </button>
                                     <button type="button" class="btn btn-danger" id="btndetele" style="margin-right: 20px" data-toggle="modal" data-target="#deleteModal" value="Delete"
                                            onclick=DeleteHardwareAsset("./DeleteHardwareAsset?Id=${data}")><i class="fas fa-trash-alt"></i>
                                     </button>`;
                    }
                },

            ]
        });
    }

    function InfoHardwareAsset(url) {
        $.ajax({
            url: url,
            type: "GET",
            dataType: "JSON",
            success: function (data) {
                $('#topititle').text(data[0].Equipment + ' (' + data[0].Description + ')');
                $('#txtId').text(data[0].Id);
                $('#txtiEquipmentType').text(data[0].EquipmentType);
                $('#txtiDescription').text(data[0].Description);
                $('#txtiSerialNumber').text(data[0].SerialNumber);
                $('#txtiModel').text(data[0].Model);
                $('#txtiResponsible').text(data[0].Responsible);
                $('#txtiOwner').text(data[0].Owner);
                $('#txtiLocation').text(data[0].Responsible);
                $('#txtiSection').text(data[0].Section);
                $('#txtiDepartment').text(data[0].Department);
                $('#txtiTelephoneOwner').text(data[0].TelephoneOwner);
                $('#txtiPreviousOwner').text(data[0].PreviousOwner);
                $('#txtiPreviousLocation').text(data[0].PreviousLocation);
                $('#txtiServiceVendor').text(data[0].ServiceVendor);
                $('#txtiContactVendor').text(data[0].ContactVendor);
                $('#txtiCompany').text(data[0].Company);
                $('#txtiEquipmentGroup').text(data[0].EquipmentGroup);
                $('#txtiPurchaseDate').text(data[0].PurchaseDate);
                $('#txtiReceiveDate').text(data[0].ReceiveDate);
                $('#txtiServiceDate').text(data[0].ServiceDate);
                $('#txtiWarrantyDate').text(data[0].WarrantyDate);
                $('#txtiEquipmentAging').text(data[0].EquipmentAging);
                $('#txtiLastCalibateDate').text(data[0].LastCalibateDate);
                $('#txtiSafetyNote').text(data[0].SafetyNote);
            }
        });
    }

    function ModifyHardwareAsset(url) {
        $('#datePurchaseDate').datetimepicker({
            format: 'DD-MMM-YYYY'
        });

        $('#dateReceiveDate').datetimepicker({
            format: 'DD-MMM-YYYY'
        });

        $('#dateServiceDate').datetimepicker({
            format: 'DD-MMM-YYYY'
        });

        $.ajax({
            url: url,
            type: "GET",
            dataType: "JSON",
            success: function (data) {
                $('#topmtitle').text(data[0].Equipment + ' (' + data[0].Description + ')');
                $('#txtId').val(data[0].Id);
                $('#txtmEquipmentType').text(data[0].EquipmentType);
                $('#txtmDescription').val(data[0].Description);
                $('#txtmSerialNumber').val(data[0].SerialNumber);
                $('#txtmModel').val(data[0].Model);
                $('#txtmStatus').val(data[0].Status);
                $('#txtmResponsible').val(data[0].Responsible);
                $('#txtmOwner').val(data[0].Owner);
                $('#txtmLocation').val(data[0].Responsible);
                $('#txtmPreviousOwner').val(data[0].PreviousOwner);
                $('#txtmPreviousLocation').val(data[0].PreviousLocation);
                $('#txtmServiceVendor').val(data[0].ServiceVendor);
                $('#txtmPurchaseDate').val(data[0].PurchaseDate);
                $('#txtmReceiveDate').val(data[0].ReceiveDate);
                $('#txtmServiceDate').val(data[0].ServiceDate);
                $('#txtmWarrantyType').val(data[0].WarrantyType);
                $('#txtmWarrantyNum').val(data[0].WarrantyNum);
                $('#txtmSafetyNote').val(data[0].SafetyNote);
            }
        });
    }

    function save(url) {
        $.ajax({
            url: url,
            data: JSON.stringify({
                Id: $('#txtId').val(),
                EquipmentType: $('#txtmEquipmentType').val(),
                Description: $('#txtmDescription').val(),
                SerialNumber: $('#txtmSerialNumber').val(),
                Model: $('#txtmModel').val(),
                Owner: $('#txtmOwner').val(),
                Location: $('#txtmLocation').val(),
                Status: $('#txtmStatus').val(),
                Responsible: $('#txtmResponsible').val(),
                PreviousOwner: $('#txtmPreviousOwner').val(),
                PreviousLocation: $('#txtmPreviousLocation').val(),
                ServiceVendor: $('#txtmServiceVendor').val(),
                PurchaseDate: $('#txtmPurchaseDate').val(),
                ReceiveDate: $('#txtmReceiveDate').val(),
                ServiceDate: $('#txtmServiceDate').val(),
                WarrantyType: $('#txtmWarrantyType').val(),
                WarrantyNum: $('#txtmWarrantyNum').val(),
                SafetyNote: $('#txtmSafetyNote').val(),
            }),
            contentType: "application/json; charset=utf-8",
            type: "PUT",
            dataType: "JSON",
            success: function (data) {
                if (data.success == true) {
                    swal({
                        title: data.message,
                        icon: "success",
                        buttons: "DONE",
                    }).then((willUpdate) => {
                        if (willUpdate) {
                            dataTable.ajax.reload();
                        }
                    });
                } else {
                    swal({
                        title: "Warning",
                        text: data.message,
                        icon: "warning",
                        buttons: "DONE",
                        dangerMode: true
                    });
                }
            }
        });
    }

    function DeleteHardwareAsset(url) {
        swal({
            title: "Are you sure?",
            text: "Once deleted,you will not be able to recover",
            icon: "warning",
            buttons: true,
            dangerMode: true
        }).then((willDelete) => {
            if (willDelete) {
                $.ajax({
                    type: "DELETE",
                    url: url,
                    success: (data) => {
                        if (data) {
                            toastr.options = {
                                "positionClass": "toast-bottom-left",
                            };
                            toastr.success(data.message);
                            dataTable.ajax.reload();
                        } else {
                            toastr.error(data.message);
                        }
                    }
                });
            }
        });
    }

    function myFunction() {
        var dots = document.getElementById("dots");
        var moreText = document.getElementById("more");
        var btnText = document.getElementById("myBtn");

        if (dots.style.display === "none") {
            dots.style.display = "inline";
            btnText.innerHTML = "Add more";
            moreText.style.display = "none";
        } else {
            dots.style.display = "none";
            btnText.innerHTML = "Add less";
            moreText.style.display = "inline";
        }
    }

