<div class="row">
    <div class="col-sm-12 p-1" style="padding-left:unset;padding-right:unset;">
        <div class="card m-2 p-1">
            <h3 class="card-header font-weight-bold"><i class="fas fa-plus fa-lg"></i>&nbsp;Create Software Asset</h3>
            <div class="card-body font-weight-bold">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6 p-3">
                            <div class="row">
                                <div class="col-md-4 p-3" style="text-align:right;">
                                    Company
                                </div>
                                <div class="col-md-8 p-3">
                                    <div class="input-group">
                                        <select id="ddlCompany" class="form-control font-weight-bold">
                                            <option class="font-weight-bold" value="">Select</option>
                                            <option class="font-weight-bold" value="MIL">MIL</option>
                                            <option class="font-weight-bold" value="MTL">MTL</option>
                                            <option class="font-weight-bold" value="MEM">MEM</option>
                                        </select>
                                        <div class="input-group-prepend">
                                            <span class="input-group-text bg-white" id="basic-addon1"><i class="fab fa-slack-hash" style="color:red;"></i></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 p-3" style="text-align:right;">
                                    Software Type
                                </div>
                                <div class="col-md-8 p-3">
                                    <div class="input-group">
                                        <select id="ddlSoftwareType" class="form-control font-weight-bold">
                                            <option class="font-weight-bold" value="">Select</option>
                                            <option class="font-weight-bold" value="0S">Purchase</option>
                                            <option class="font-weight-bold" value="0P">Opensource</option>
                                            <option class="font-weight-bold" value="0D">Develop</option>
                                        </select>
                                        <div class="input-group-prepend">
                                            <span class="input-group-text bg-white" id="basic-addon1"><i class="fab fa-slack-hash" style="color:red;"></i></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 p-3" style="text-align:right;">
                                    Software Name
                                </div>
                                <div class="col-md-8 p-3">
                                    <div class="input-group">
                                        <input class="form-control" id="txtSoftwareName">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text bg-white" id="basic-addon1"><i class="fab fa-slack-hash" style="color:red;"></i></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 p-3" style="text-align:right;">
                                    Core Function
                                </div>
                                <div class="col-md-8 p-3">
                                    <input class="form-control" id="txtCoreFunction">
                                </div>
                                <div class="col-md-4 p-3" style="text-align:right;">
                                    Responsible
                                </div>
                                <div class="col-md-8 p-3">
                                    <div class="input-group">
                                        <input class="form-control" id="txtResponsible">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text bg-white" id="basic-addon1"><i class="fab fa-slack-hash" style="color:red;"></i></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 p-3" style="text-align:right;">
                                    Description
                                </div>
                                <div class="col-md-8 p-3">
                                    <textarea class="form-control" id="txtDescription" rows="3"></textarea>
                                </div>
                                <div class="col-md-4 p-3" style="text-align:right;">
                                    Remark
                                </div>
                                <div class="col-md-8 p-3">
                                    <textarea class="form-control" id="txtRemark" rows="3"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 p-3">
                            <div class="row">
                                <div class="col-md-4 p-3" style="text-align:right;">
                                    Location
                                </div>
                                <div class="col-md-8 p-3">
                                    <input class="form-control" id="txtLocation">
                                </div>
                                <div class="col-md-4 p-3" style="text-align:right;">
                                    Cost
                                </div>
                                <div class="col-md-8 p-3">
                                    <input class="form-control" id="txtCost" type="number" min="0">
                                </div>
                                <div class="col-md-4 p-3" style="text-align:right;">
                                    License Type
                                </div>
                                <div class="col-md-8 p-3">
                                    <div class="input-group">
                                        <select id="ddlLicenseType" class="form-control font-weight-bold">
                                            <option class="font-weight-bold" value="">Select</option>
                                            <option class="font-weight-bold" value="Concurrent">Concurrent</option>
                                            <option class="font-weight-bold" value="Name">Name</option>
                                            <option class="font-weight-bold" value="Leasing">Leasing</option>
                                            <option class="font-weight-bold" value="Free">Free</option>
                                        </select>
                                        <div class="input-group-prepend">
                                            <span class="input-group-text bg-white" id="basic-addon1"><i class="fab fa-slack-hash" style="color:red;"></i></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 p-3" style="text-align:right;">
                                    License Qty
                                </div>
                                <div class="col-md-8 p-3">
                                    <input class="form-control" id="txtLicenseQty" type="number" min="0">
                                </div>
                                <div class="col-md-4 p-3" style="text-align:right;">
                                    Start Date
                                </div>
                                <div class="col-md-8 p-3">
                                    <div class="form-group">
                                        <div class="input-group date" id="dateStartDate" data-target-input="nearest">
                                            <input id="txtStartDate" type="text" class="form-control datetimepicker-input" data-target="#dateStartDate" />
                                            <div class="input-group-append" data-target="#dateStartDate" data-toggle="datetimepicker">
                                                <div class="input-group-text"><i class="far fa-calendar-alt"></i></div>
                                            </div>
                                            <div class="input-group-prepend">
                                                <span class="input-group-text bg-white" id="basic-addon1"><i class="fab fa-slack-hash" style="color:red;"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 p-3" style="text-align:right;">
                                    Obsolate Date
                                </div>
                                <div class="col-md-8 p-3">
                                    <div class="input-group date" id="dateObsolateDate" data-target-input="nearest">
                                        <input id="txtObsolateDate" type="text" class="form-control datetimepicker-input" data-target="#dateObsolateDate" />
                                        <div class="input-group-append" data-target="#dateObsolateDate" data-toggle="datetimepicker">
                                            <div class="input-group-text"><i class="far fa-calendar-alt"></i></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 p-3" style="text-align:right;">
                                    Upload (PDF)
                                </div>
                                <div class="col-md-8 p-3">
                                    <form id="FileUpload" action="" method="post" enctype="multipart/form-data">
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" id="txtBrowse">
                                            <label class="custom-file-label font-weight-bold" for="customFile">Choose file</label>
                                        </div>
                                    </form>
                                </div>
                                <div class="col-md-4 p-3"></div>
                                <div class="col-md-4 p-3">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="chkUserAccountNeed">
                                        <label class="custom-control-label" for="chkUserAccountNeed">User Account Need</label>
                                    </div>
                                </div>
                                <div class="col-md-4 p-3">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="chkTrainingNeed">
                                        <label class="custom-control-label" for="chkTrainingNeed">Training Need</label>
                                    </div>
                                </div>
                                <div class="col-md-4 p-3" style="text-align:right;">
                                    Status
                                </div>
                                <div class="col-md-8 p-3">
                                    <form class="was-validated">
                                        <div class="custom-control custom-radio">
                                            <input type="radio" class="custom-control-input" id="chkActive" name="radio-stacked" required checked>
                                            <label class="custom-control-label" for="chkActive">Active</label>
                                        </div>
                                        <div class="custom-control custom-radio mb-3">
                                            <input type="radio" class="custom-control-input" id="chkInactive" name="radio-stacked" required>
                                            <label class="custom-control-label" for="chkInactive">Inactive</label>
                                        </div>
                                    </form>
                                </div>
                                <div class="col-md-4 p-3"></div>
                                <div class="col-md-8 p-3">
                                    <button id="btnClear" type="button" class="btn btn-warning btn-sm font-weight-bold">Clear</button>
                                    <button id="btnSubmit" type="button" class="btn btn-success btn-sm font-weight-bold">Submit</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(".custom-file-input").on("change", function () {
        var fileName = $(this).val().split("\\").pop();
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);

        if ($('.custom-file-label').html().indexOf("pdf") < 0) {
            swal({
                title: "Warning",
                text: "Invalid file type.",
                icon: "warning",
                buttons: "DONE",
                dangerMode: true
            }).then((willDone) => {
                $(".custom-file-label").addClass("selected").html('Choose file');
            });
        }
    });

    bootstrapValidate(['#ddlCompany', '#ddlSoftwareType', '#txtSoftwareName', '#txtResponsible', '#ddlLicenseType', '#txtStartDate'], 'required:Please fill out this field!');

    $('#dateStartDate').datetimepicker({
        format: 'DD-MMM-YYYY LT'
    });

    $('#dateObsolateDate').datetimepicker({
        format: 'DD-MMM-YYYY LT'
    });

    $('#btnClear').on('click', (e) => {
        e.stopImmediatePropagation();
        $('#chkActive').prop('checked', true);
        $('#chkInactive').prop('checked', false);
        $('#chkUserAccountNeed').prop('checked', false);
        $('#chkTrainingNeed').prop('checked', false);
        $('#chkUserAccountNeed,#chkTrainingNeed').prop('checked', false);
        $('#ddlCompany,#ddlSoftwareType,#txtLocation,#txtCost,#ddlLicenseType,#txtLicenseQty,#txtSoftwareName,#txtCoreFunction,#txtDescription,#txtResponsible,#txtRemark,#txtStartDate,#txtObsolateDate').val('');
        $(".custom-file-label").addClass("selected").html('Choose file');
    });

    $('#btnSubmit').on('click', (e) => {
        e.stopImmediatePropagation();
        var status = ($('#chkActive').is(':checked') === true) ? true : false;
        var formData = new FormData();
        var file = document.getElementById("txtBrowse").files[0];
        formData.append("FileUpload", file);
        $.ajax({
            url: './SetSoftwareAsset',
            data: JSON.stringify({
                Company: $('#ddlCompany').val(),
                SoftwareType: $('#ddlSoftwareType').val(),
                SoftwareName: $('#txtSoftwareName').val(),
                CoreFunction: $('#txtCoreFunction').val(),
                Responsible: $('#txtResponsible').val(),
                Description: $('#txtDescription').val(),
                Remark: $('#txtRemark').val(),
                Location: $('#txtLocation').val(),
                Cost: $('#txtCost').val(),
                LicenseType: $('#ddlLicenseType').val(),
                LicenseQty: $('#txtLicenseQty').val(),
                StartDate: $('#txtStartDate').val(),
                ObsolateDate: $('#txtObsolateDate').val(),
                UserAccountNeed: $('#chkUserAccountNeed').is(':checked'),
                TrainingNeed: $('#chkTrainingNeed').is(':checked'),
                Status: status
            }),
            contentType: 'application/json; charset=utf-8',
            type: 'POST',
            dataType: 'JSON',
            success: (data) => {
                if (data.success === true) {
                    if ($('.custom-file-label').html().indexOf("pdf") > 0) {
                        $.ajax({
                            url: "./SetUploadFilePDF?equipment=" + data.val,
                            data: formData,
                            type: "POST",
                            dataType: "json",
                            processData: false,
                            contentType: false,
                            success: (obj) => {
                                if (obj.success == true) {
                                    swal({
                                        title: obj.message,
                                        icon: "success",
                                        buttons: "DONE"
                                    }).then((willDone) => {
                                        $('#ddlCompany').val('0');
                                        $('#chkActive').prop('checked', true);
                                        $('#chkInactive').prop('checked', false);
                                        $('#chkUserAccountNeed').prop('checked', false);
                                        $('#chkTrainingNeed').prop('checked', false);
                                        $('#ddlCompany,#ddlSoftwareType,#txtLocation,#txtCost,#ddlLicenseType,#txtLicenseQty,#txtSoftwareName,#txtCoreFunction,#txtDescription,#txtResponsible,#txtRemark,#txtStartDate,#txtObsolateDate').val('');
                                        $(".custom-file-label").addClass("selected").html('Choose file');
                                    });
                                } else {
                                    swal({
                                        title: "Warning",
                                        text: obj.message,
                                        icon: "warning",
                                        buttons: "DONE",
                                        dangerMode: true
                                    });
                                }
                            }
                        });
                    } else {
                        swal({
                            title: data.message,
                            icon: "success",
                            buttons: "DONE"
                        }).then((willDone) => {
                            $('#ddlCompany').val('0');
                            $('#chkActive').prop('checked', true);
                            $('#chkInactive').prop('checked', false);
                            $('#chkUserAccountNeed').prop('checked', false);
                            $('#chkTrainingNeed').prop('checked', false);
                            $('#ddlCompany,#ddlSoftwareType,#txtLocation,#txtCost,#ddlLicenseType,#txtLicenseQty,#txtSoftwareName,#txtCoreFunction,#txtDescription,#txtResponsible,#txtRemark,#txtStartDate,#txtObsolateDate').val('');
                            $(".custom-file-label").addClass("selected").html('Choose file');
                        });
                    }
                } else {
                    swal({
                        title: "Warning",
                        text: data.message,
                        icon: "warning",
                        buttons: "DONE",
                        dangerMode: true
                    });
                }
            }
        });
    });
</script>
